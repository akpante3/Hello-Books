{
  "name": "hello-books",
  "version": "1.0.0",
  "description": "Book library management system",
  "main": "index.js",
  "scripts": {
    "test": "npm run clean-tables && cross-env NODE_ENV=test nyc --reporter=text mocha ./server/test/*.spec.js --require @babel/register --require @babel/polyfill --slow 400 --timeout 10000 --exit",
    "start": "cross-env NODE_ENV=production npm run build && node ./build/index.js",
    "start-dev": "cross-env NODE_ENV=development nodemon --exec babel-node index.js",
    "build-babel": "babel -d ./build index.js && babel ./server --out-dir build/server",
    "build": "npm run clean && npm run build-babel",
    "clean": "rm -rf build && mkdir build && cp hello-books-swagger.json build",
    "dropTables": "babel-node server/config/dropTables.js",
    "seed": "babel-node server/config/seed.js",
    "buildTables": "babel-node server/config/buildTables.js",
    "migration": "npm run buildTables && npm run seed",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean-tables": "cross-env NODE_ENV=test npm run dropTables && cross-env NODE_ENV=test npm run buildTables"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/los-deferal-02/Hello-Books.git"
  },
  "author": "Team-2",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/los-deferal-02/Hello-Books/issues"
  },
  "homepage": "https://github.com/los-deferal-02/Hello-Books#readme",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@hapi/joi": "^15.0.3",
    "bcryptjs": "^2.4.3",
    "dotenv": "^8.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "swagger-ui-express": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.0",
    "babel-plugin-istanbul": "^5.1.1",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "eslint-plugin-mocha": "^5.3.0",
    "mocha": "^6.1.4",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "sinon": "^7.3.2"
  }
}
